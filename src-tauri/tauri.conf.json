{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "kisara_desktop",
    "version": "0.1.0",
    "identifier": "cc.spie.kisara",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "kisara_desktop",
                "width": 1280,
                "height": 720,
                "decorations": false
            }
        ]
    },
    "bundle": {
        "active": true,
        "targets": ["nsis", "msi"],
        "icon": ["icons/icon.png", "icons/icon.ico"],
        "externalBin": ["../sidecars/ffprobe"]
    }
}
